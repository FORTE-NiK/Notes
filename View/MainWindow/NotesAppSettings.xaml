<UserControl x:Class="ForteNotes.View.MainWindow.MainButtons.NotesAppSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ForteNotes.View.MainWindow.MainButtons"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <ItemsControl>
            <RadioButton Content="Светлая тема" Foreground="White" Margin="20" IsChecked="{Binding Path=WhiteThemeButton}">
                
            </RadioButton>
            <RadioButton Margin="20" Content="Темная тема" Foreground="White" IsChecked="{Binding Path=BlackThemeButton}">
                
            </RadioButton>
        </ItemsControl>
    </StackPanel>
    
</UserControl>
